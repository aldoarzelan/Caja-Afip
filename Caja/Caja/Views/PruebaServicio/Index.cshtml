
@{
    ViewBag.Title = "Prueba Servicio";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Content Header (Page header) -->

<section class="content-header">
    <h1>
        @ViewBag.Title
        <small>esto es solo una prueba</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Caja</a></li>
        <li class="active"></li>
    </ol>
</section>
<!-- Main content -->
<section class="content">
    <!-- Default box -->
    <div class="box">
        <div class="box-header with-border">
            <h3 class="box-title">Title</h3>
            <div class="box-tools pull-right">
                <button type="button" class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip"
                        title="Collapse">
                    <i class="fa fa-minus"></i>
                </button>
                <button type="button" class="btn btn-box-tool" data-widget="remove" data-toggle="tooltip" title="Remove">
                    <i class="fa fa-times"></i>
                </button>
            </div>
        </div>
        <div class="box-body">
            <body>
                @using (Html.BeginForm("btnPrueba", "PruebaServicio", FormMethod.Post))
                {<button class="btn btn-primary" value="btnPrueba" name="submitButton">Probar</button>}
                <br />
                @using (Html.BeginForm("btnConsulta", "PruebaServicio", FormMethod.Post))
                {<button class="btn btn-primary" value="=btnConsulta" name="Consulta">Consultar</button>}
                <br />
                @ViewBag.Mensaje
@using (Html.BeginForm("Login2", "Login", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{<button type="submit" class="btn btn-primary btn-block btn-flat">Ingresar</button>
}
            </body>
        </div>
        <!-- /.box-body -->
        <div class="box-footer">
            <!-- /.aqui se puede escribir el pie de pagina -->
        </div>
        <!-- /.box-footer-->
    </div>
    <!-- /.box -->
</section>
<!-- /.content -->

